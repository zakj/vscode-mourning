{
  "name": "Mourning",
  "type": "dark",

  // https://code.visualstudio.com/docs/getstarted/theme-color-reference
  "colors": {
    "titleBar.activeBackground": "{{mineshaft2}}",
    "titleBar.activeForeground": "{{silver}}",
    "titleBar.inactiveBackground": "{{mineshaft2}}",
    "titleBar.inactiveForeground": "{{grey}}",

    "activityBar.background": "{{mineshaft2}}",
    "activityBar.foreground": "{{silver}}",

    "sideBar.background": "{{mineshaft1}}",
    "sideBar.foreground": "{{grey}}",
    "sideBarTitle.foreground": "{{silver}}",
    "sideBarSectionHeader.background": "{{mineshaft2}}",
    "sideBarSectionHeader.foreground": "{{silver}}",

    "editorGroupHeader.tabsBackground": "{{mineshaft1}}",
    "tab.inactiveBackground": "{{mineshaft1}}",
    "tab.activeBackground": "{{mineshaft0}}",

    "editor.background": "{{mineshaft0}}",
    "editor.foreground": "{{grey}}",
    "editorBracketMatch.border": "{{bright-green}}",
    "editorCursor.background": "{{black}}",
    "editorCursor.foreground": "{{bright-green}}",
    "editorLineNumber.activeForeground": "{{boulder}}",
    "editorLineNumber.foreground": "{{mineshaft2}}",
    "editor.findMatchHighlightBackground": "{{green-yellow}}22",

    "statusBar.background": "{{mineshaft2}}",
    "statusBar.foreground": "{{silver}}",
    "statusBar.debuggingBackground": "{{mineshaft2}}",
    "statusBar.debuggingBorder": "{{bittersweet}}",
    "statusBar.noFolderBackground": "{{mineshaft2}}",
    "statusBar.noFolderBorder": "{{wisteria}}",
    "statusBarItem.prominentBackground": "{{boulder}}"
  },

  // https://www.sublimetext.com/docs/3/scope_naming.html
  "tokenColors": [
    {
      "scope": ["comment", "string.quoted.docstring"],
      "settings": {
        "foreground": "{{boulder}}",
        "fontStyle": "italic"
      }
    },
    {
      "scope": [
        "constant",
        "keyword.other.unit.css",
        "string"
      ],
      "settings": {
        "foreground": "{{wild-blue}}"
      }
    },
    {
      "scope": [
        "entity.name.tag",
        "keyword",
        "support.type.property-name.json"
      ],
      "settings": {
        "fontStyle": "bold",
        "foreground": "{{silver}}"
      }
    },
    {
      "scope": "variable",
      "settings": {
        "foreground": "{{silver}}"
      }
    }
  ]
}
